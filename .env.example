# Medusa Storefront Environment Variables
# Copy this file to .env.local and update with your values

# Backend URL
MEDUSA_BACKEND_URL=http://localhost:9000
# For production: https://api.your-domain.com

# Publishable API Key (Get this from Medusa Admin: Settings  Publishable API Keys)
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=pk_your_publishable_key_here

# Store URL
NEXT_PUBLIC_BASE_URL=http://localhost:8000
# For production: https://your-domain.com

# Default Region (ISO-2 format, e.g., us, gb, de)
NEXT_PUBLIC_DEFAULT_REGION=us

# Stripe (Optional - for Stripe payments)
NEXT_PUBLIC_STRIPE_KEY=

# Medusa Payments (Optional)
NEXT_PUBLIC_MEDUSA_PAYMENTS_PUBLISHABLE_KEY=
NEXT_PUBLIC_MEDUSA_PAYMENTS_ACCOUNT_ID=

# Revalidation Secret (for Next.js on-demand revalidation)
REVALIDATE_SECRET=your-revalidation-secret

# Medusa Cloud S3 (Optional - for image optimization)
MEDUSA_CLOUD_S3_HOSTNAME=
MEDUSA_CLOUD_S3_PATHNAME=
